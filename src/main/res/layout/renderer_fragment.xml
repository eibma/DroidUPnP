<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                style="@style/renderer"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

    <LinearLayout
        android:id="@+id/descriptionLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_gravity="center_vertical|center_horizontal"
        android:orientation="vertical">

        <TextView
            android:id="@+id/title"
            style="@style/rendererTitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:ellipsize="marquee"
            android:maxLines="1"
            android:textIsSelectable="false"/>

        <TextView
            android:id="@+id/subtitle"
            style="@style/rendererSubtitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ellipsize="marquee"
            android:maxLines="1"
            android:textIsSelectable="false"/>

    </LinearLayout>

    <SeekBar
        android:id="@+id/progressBar"
        android:layout_width="fill_parent"
        android:layout_height="30dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/descriptionLayout"
        android:layout_gravity="bottom"
        android:paddingLeft="-3dp"
        android:paddingRight="-3dp"/>

    <TextView
        android:id="@+id/trackDurationRemaining"
        style="@style/rendererText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignEnd="@+id/volumeLayout"
        android:layout_alignRight="@+id/volumeLayout"
        android:layout_below="@+id/progressBar"
        android:layout_gravity="center_vertical|fill_vertical"
        android:layout_marginEnd="57dp"
        android:layout_marginRight="57dp"
        android:text="@string/duration"
        android:textAppearance="?android:attr/textAppearanceSmall"/>

    <TextView
        android:id="@+id/trackDurationElapse"
        style="@style/rendererText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/volumeLayout"
        android:layout_alignStart="@+id/volumeLayout"
        android:layout_below="@+id/progressBar"
        android:layout_gravity="center_vertical|fill_vertical"
        android:text="@string/duration"
        android:textAppearance="?android:attr/textAppearanceSmall"/>

    <ImageButton
        android:id="@+id/stopButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/trackDurationElapse"
        android:layout_alignStart="@+id/trackDurationElapse"
        android:layout_below="@+id/trackDurationElapse"
        android:background="@android:color/transparent"
        android:contentDescription="@string/stop"
        android:padding="3dp"
        android:src="@drawable/stop"/>

    <ImageButton
        android:id="@+id/play_pauseButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/trackDurationElapse"
        android:layout_toEndOf="@+id/stopButton"
        android:layout_toRightOf="@+id/stopButton"
        android:background="@android:color/transparent"
        android:contentDescription="@string/play"
        android:padding="3dp"
        android:src="@drawable/play"/>

    <LinearLayout
        android:id="@+id/volumeLayout"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/stopButton"
        android:layout_gravity="center_vertical|center_horizontal"
        android:orientation="vertical">

        <ImageButton
            android:id="@+id/volumeIcon"
            android:layout_width="40dp"
            android:layout_height="match_parent"
            android:layout_marginEnd="15dp"
            android:layout_marginRight="15dp"
            android:background="@android:color/transparent"
            android:contentDescription="@string/mute"
            android:src="@drawable/volume"/>

        <SeekBar
            android:id="@+id/volume"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            />

    </LinearLayout>

</RelativeLayout>
